<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_cardView_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/seeking_help_child_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"


            android:layout_marginBottom="32dp"
            android:background="@drawable/button_style_white"
            android:elevation="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="01708924486"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/seeking_help_location"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/seeking_help_child_location_image"
            app:layout_constraintTop_toBottomOf="@+id/seeking_help_location" />

        <TextView
            android:id="@+id/seeking_help_child_bld_grp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"

            android:background="@drawable/blood_grp_not_selected"
            android:fontFamily="@font/montserrat"
            android:padding="15dp"
            android:text="AB+"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seeking_help_type" />

        <ImageView
            android:id="@+id/seeking_help_child_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/profile_icon_male"
            app:layout_constraintBottom_toBottomOf="@+id/seeking_help_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/seeking_help_name" />

        <TextView
            android:id="@+id/seeking_help_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:textColor="@color/textColorDark"
            android:fontFamily="@font/montserrat"
            android:text="Tanvir Ahmmad"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/seeking_help_child_profile_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/seeking_help_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_style_colored"
            android:fontFamily="@font/raleway_bold"
            android:paddingLeft="20dp"


            android:paddingRight="20dp"
            android:text="Plasma"
            android:textColor="#ffffff"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/seeking_help_child_location_image"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/location_icon"
            app:layout_constraintEnd_toEndOf="@+id/seeking_help_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/seeking_help_name"
            app:layout_constraintTop_toBottomOf="@+id/seeking_help_name" />

        <TextView
            android:id="@+id/seeking_help_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/textColorGrey"
            android:fontFamily="@font/raleway"
            android:text="Jessore"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/seeking_help_child_location_image"
            app:layout_constraintStart_toEndOf="@+id/seeking_help_child_location_image"
            app:layout_constraintTop_toTopOf="@+id/seeking_help_child_location_image" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>