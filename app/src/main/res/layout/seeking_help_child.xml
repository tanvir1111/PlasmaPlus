<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_cardView_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="#F9F9F9"
    app:cardCornerRadius="30dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/seeking_help_child_profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/profile_icon_male"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/seeking_help_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"


                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_style_colored"
                    android:fontFamily="@font/raleway_bold"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Plasma"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/seeking_help_child_bld_grp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/seeking_help_child_bld_grp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/blood_grp_not_selected"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="AB+"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/seeking_help_type"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/seeking_help_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/raleway"
                    android:maxWidth="140dp"
                    android:text="Jessore"
                    android:textColor="@color/textColorGrey"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/seeking_help_child_bld_grp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/seeking_help_child_location_image"
                    app:layout_constraintTop_toBottomOf="@+id/seeking_help_name" />

                <TextView
                    android:id="@+id/seeking_help_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Tanvir Ahmmad"
                    android:textColor="@color/textColorDark"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/seeking_help_child_profile_image"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/seeking_help_donate_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_style_colored"
                    android:elevation="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Donate to Help"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/seeking_help_child_bld_grp"
                    app:layout_constraintStart_toEndOf="@+id/seeking_help_child_profile_image"
                    app:layout_constraintTop_toBottomOf="@+id/seeking_help_location"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/seeking_help_child_location_image"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/location_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/seeking_help_location"
                    app:layout_constraintStart_toEndOf="@+id/seeking_help_child_profile_image"
                    app:layout_constraintTop_toTopOf="@+id/seeking_help_location" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/seeking_help_child_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/seeking_help_child_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="148dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/seeking_help_child_recyclerview"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/seeking_help_child_recyclerview" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>